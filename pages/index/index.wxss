/* pages/index/index.wxss */

.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}
/* 导航区域 */
.pagination{
  display: flex;
  justify-content: space-around;
}
.pagination .nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.pagination .nav-item .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  font-size: 50rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background-color: #d43c33;
  margin: 20rpx 0;
}
.pagination .nav-item text:nth-of-type(2){
  font-size: 26rpx;
}

/* 歌曲推荐 */
.recommend-container{
  padding: 40rpx;
  padding-bottom: 30rpx;
}


/* 图片滚动内容区域 */

.recommend-scroll{
  display: flex;
  margin-top: 40rpx;
  height: 300rpx;
}
.recommend-scroll .scroll-item{
  width: 200rpx;
  margin-right: 10rpx;
}
.recommend-scroll .scroll-item image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.recommend-scroll .scroll-item text{
  /* 单行文本溢出 */
  /* display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
  /* 多行文本溢出 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 排行榜 */
.rank{
  padding: 0 40rpx;
}
.rank .rank-swiper{
  height: 400rpx;
  margin-top: 30rpx;
}
.rank .rank-swiper .swiper-item{
  display: flex;
  flex-direction: column;
  width: 93%;
}
.rank .rank-swiper .swiper-item .music-item{
  margin: 10rpx 0;
  display: flex;
  align-items: center;
}
.rank .rank-swiper .swiper-item .music-item image{
  width: 100rpx;
  height: 100rpx;
}
.rank .rank-swiper .swiper-item .music-item .order{
  width: 80rpx;
  text-align: center;
}