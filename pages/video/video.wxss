/* pages/video/video.wxss */
.video-container{
  padding: 20rpx;
}


/* 头部区域 */
.video-container .header{
  display: flex;
  align-items: center;
  /* padding: 20rpx; */
}
.video-container .header image{
  width: 60rpx;
  height: 60rpx;
}
.video-container .header .search{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  color: #d43c33;
  flex: 1;
  margin: 0 20rpx;
  border: 1px solid #eee;
}


/* 导航区域 */
.nav{
  display: flex;
  margin-top: 50rpx;
  /* margin: 0 20rpx; */
  height: 50rpx;
}
.nav .nav-item .content{
  white-space: nowrap;
  height: 45rpx;
  margin-right: 50rpx;
}
.content.active{
  border-bottom: 2rpx solid #d43c33;
}

/* 视频列表区 */
.video-list{
  height: calc(100vh - 204rpx);
}
/* .video-item .content{
  width: 100%;
}  */

.video-item .content .common{
  /* display: block; */
  margin: 10rpx 0;
  width: 100%;
  height: 400rpx;
  border-radius: 10rpx;
}
/* footer */
.video-title{
  line-height: 50rpx;
  padding-bottom: 20rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid rgb(138, 138, 138);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.video-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.author-avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.author-name{
  flex: 1 0;
  line-height: 100rpx;
  padding-left: 20rpx;
}

.video-info .icons .iconfont,.share{
  width: 50rpx;
  line-height: 100rpx;
  font-size: 60rpx;
}
.video-info .icons .number{
  width: 50rpx;
  vertical-align: top;
  font-size: 20rpx;
}
button.share{
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
  outline: none;
  border: none;
}
.share:after{
  border: none;
}